<div class="bigDiv" style="width:300px;">
  <h1 style="text-align:center;">Registro</h1>
</div>

<div class="bigDiv" style="width:300px;text-align:center;">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "usuarios/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true %>
  </div>

  <div class="field">
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre, autocomplete: "name", required: true %>
  </div>

  <div class="field">
    <%= f.label :teléfono%> (9 dígitos)<br />
    <%= f.text_field :telefono, autocomplete: "phone", required: true %>
  </div>

  <div class="field">
    <%= f.label :dirección%><br />
    <%= f.text_field :direccion, autocomplete: "address", required: true %>
  </div>

  <div class="field">
    <%= f.label :foto_perfil%><br />
    <%= f.file_field :foto_perfil %>
  </div>

  <div class="field">
    <%= f.label :clave %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", required: true %>
  </div>

  <div class="field">
    <%= f.label :confirmar_clave %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true %>
  </div>

  <br/>

  <div class="actions">
    <%= f.submit "Registrarse", class: "link" %>
  </div>

  <br>
<% end %>
</div>

<br/>

<div class="smallButton">
  <%= link_to "Volver", root_path, class: "link" %>
</div>
