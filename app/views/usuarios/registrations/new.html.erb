<h2>Registro</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "usuarios/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :télefono%><br />
    <%= f.text_field :telefono, autocomplete: "phone" %>
  </div>

  <div class="field">
    <%= f.label :dirección%><br />
    <%= f.text_field :direccion, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :clave %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :confirmar_clave %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Registrarse" %>
  </div>
<% end %>

<%= render "usuarios/shared/links" %>
