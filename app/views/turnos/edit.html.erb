<div class="bigDiv" style="width:250px;">
  <h1 style="font-family:Cambria;text-align:center;">Editar turno <%= @turno.id %></h1>
</div>

<ul>
      <% @turno.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
</ul>

<div class="bigDiv" style="width:500px;border-radius: 15px;">
<%= form_with model: @turno, action: 'update' do |f| %>

    <span>&#8226;</span><%= f.label :fecha%>
    <%= f.datetime_field :fecha, :required => true %>

    <br/>
    <span>&#8226;</span><%= f.label "Dirección origen/destino" %>
    <%= f.text_field :direccion_salida, :required => true %>

    <br/>
    <span>&#8226;</span><%= f.label "Comuna origen/destino" %>
    <%= f.text_field :comuna, :required => true %>

    <br/>
    <span>&#8226;</span><%= f.label :campus_destino%>
    <%= f.select :campus, ["San Joaquín", "Casa Central", "Oriente", "Lo Contador", "Villarrica"], :required => true %>

    <br/>
    <span>&#8226;</span><%= f.label :tipo%>
    <%= f.select :tipo, ["Ida", "Vuelta"], :required => true %>


    <br/>
    <span>&#8226;</span><%= f.label :cupos%>
    <%= f.number_field :cupos, min: 1, step: 1, :required => true %>
    
    <br/>
    <br/>
    <%= f.submit "Guardar turno" %>
<% end %>
</div>

<br/>

<div class="smallButton">
  <%= link_to "Volver", root_path, class: "link" %>
</div>
