<div style="background-color: #71a9c0; width:250px; height:auto;border: 3px solid;box-shadow: 5px 5px;margin:auto;">
  <h1 style="font-family:Cambria;text-align:center;">Editar turno <%= @turno.id %></h1>
</div>

<ul>
      <% @turno.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
</ul>

<div style="background-color: #71a9c0; width:300px; height:auto;border: 3px solid;box-shadow: 5px 5px;margin:auto;">
<%= form_with model: @turno, action: 'update' do |f| %>


    <span>&#8226;</span><%= f.label :día%>
    <%= f.select :dia, ["Lunes", "Martes", "Miércoles", "Jueves", "Viernes", "Sabádo"], :required => true %>

    <br/>
    <span>&#8226;</span><%= f.label :hora_salida%>
    <%= f.time_field :hora_salida, :required => true %>

    <br/>
    <span>&#8226;</span><%= f.label :dirección_salida%>
    <%= f.text_field :direccion_salida, :required => true %>

    <br/>
    <span>&#8226;</span><%= f.label :campus_destino%>
    <%= f.select :campus, ["San Joaquín", "Casa Central", "Oriente", "Lo Contador", "Villarrica"], :required => true %>

    <br/>
    <span>&#8226;</span><%= f.label :tipo%>
    <%= f.select :tipo, ["Ida", "Vuelta"], :required => true %>


    <br/>
    <span>&#8226;</span><%= f.label :cupos%>
    <%= f.number_field :cupos, min: 1, step: 1, :required => true %>
    
    <br/>
    <br/>
    <%= f.submit "Guardar turno" %>
<% end %>
</div>

<br/>

<div style="background-color: #71a9c0; width:80px; height:auto;border: 3px solid;margin:auto;text-align:center;border-radius: 15px;">
  <%= link_to "Volver", root_path %>
</div>
