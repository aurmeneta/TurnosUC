<h1><%= @turno.id %></h1>

Publicado por: <%= @turno.usuario.nombre %> <br/>
Día: <%= @turno.dia %> <br/>
Dirección salida: <%= @turno.direccion_salida %> <br/>
Hora salida: <%= @turno.hora_salida %> <br/>
Tipo: <%= @turno.tipo %> <br/>
Cupos: <%= @turno.cupos %> <br/>
Campus: <%= @turno.campus %> <br/>


Solicitudes:
<ul>
    <% @turno.solicitud.each do |solicitud| %>
        <li>
        <%= "Solicitud #{solicitud.id} | Estado: #{solicitud.descripcion}" %>
        <%= link_to "Gestionar solicitud", edit_solicitud_path(solicitud) %>
        <%= link_to "Eliminar solicitud", solicitud, method: :delete %>
        <%= button_to "Aceptar turno", aceptar_solicitud_path(solicitud)%>
        <%= button_to "Rechazar turno", rechazar_solicitud_path(solicitud)%>
        </li>
    <% end %>
</ul>



<%= link_to "Eliminar turno", @turno, method: :delete %>
<%= link_to "Editar turno", edit_turno_path(@turno)%>
<%= link_to "Volver", root_path %>
<%= button_to "Solicitar turno", new_solicitud_path, params: {turno_id:@turno.id} %>
