
<div style="background-color: #71a9c0; width:400px; height:auto;border: 3px solid;box-shadow: 5px 5px;margin:auto;">
  <h1 style="font-family:Cambria;text-align:center;">Publicaciones:</h1>
</div>

<br/>

<div style="background-color: #71a9c0; width:400px; height:auto;border: 3px solid;box-shadow: 5px 5px;margin:auto;">
  <p style="font-family:Cambria"><b>Turnos de ida:</b></p>
  <ul>
    <% @turnos.each do |turno| %>
      <% if turno.tipo == "Ida" %>
        <li><%= link_to "Turno ##{turno.id} de #{turno.direccion_salida} a #{turno.campus} día #{turno.dia}", turno_path(turno.id) %></li>
      <% end %>
    <% end %>
  </ul>

  <p style="font-family:Cambria"><b>Turnos de vuelta:</b></p>
  <ul>
    <% @turnos.each do |turno| %>
      <% if turno.tipo == "Vuelta" %>
        <li><%= link_to "Turno ##{turno.id} de #{turno.campus} a #{turno.direccion_salida} día #{turno.dia}", turno_path(turno.id) %></li>
      <% end %>
    <% end %>
  </ul>
</div>

<br/>
<div style="background-color: #71a9c0; width:100px; height:auto;border: 3px solid;margin:auto;text-align:center;border-radius: 15px;">
  <%= link_to "Crear turno", new_turno_path %>
</div>
