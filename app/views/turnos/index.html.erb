<div style="background-color: #71a9c0; width:300px; height:80px;border: 3px solid;box-shadow: 5px 5px;margin:auto;">
  <h1 style="font-family:Cambria;">Turnos</h1>
</div>

<div style="background-color: #71a9c0; width:300px; height:80px;border: 3px solid;box-shadow: 5px 5px;margin:auto;">
  <ul>
    <% @turnos.each do |turno| %>
        <li><%= link_to "Turno #{turno.id} a #{turno.campus}", turno_path(turno.id) %></li>
    <% end %>
  </ul>
</div>

<hr>
<div style="background-color: #71a9c0; width:100px; height:30px;border: 3px solid;box-shadow: 5px 5px;margin:auto;">
  <%= link_to "Crear turno", new_turno_path %>
</div>

<div style="background-color: #71a9c0; width:80px; height:30px;border: 3px solid;box-shadow: 5px 5px;margin:auto;">
<%= link_to "Volver", root_path %>
</div>
