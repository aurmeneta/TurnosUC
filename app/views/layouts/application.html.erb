<!DOCTYPE html>
<html>
  <head>
    <title>Turnos UC</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <style> body {background-image: url("<%= asset_path('fondo.png') %>");
                  background-size: cover;} 
    </style>
  </head>

  <body>
    <% if current_usuario %>
      <div class="button">
        <%= link_to "Inicio", root_path, class: "link" %>
      </div>
      <div class="button">
        <%= link_to "Ver perfil", edit_usuario_registration_path, class: "link" %>
      </div>
      <div class="button">
        <%= link_to "Ver historial", historial_path, class: "link" %>
      </div>
      <div class="button">
        <%= link_to "Cerrar Sesión", destroy_usuario_session_path, method: :delete, class: "link" %>
      </div>
    <% else %>
      <div class="button">
        <%= link_to "Iniciar Sesión", new_usuario_session_path, class: "link" %>
      </div>
      <div class="button">
        <%= link_to "Registrarme", new_usuario_registration_path, class: "link" %>
      </div>
    <% end %>

    <div class="bigDiv" style="text-align:center;border-radius: 15px;">
       <div style="vertical-align:top;display: inline-block;">
         <%= image_tag("logo.png", size: "130x130") %>
       </div>
       <h1 style="font-family:Cambria;font-size:70px;display: inline-block;">Turnos UC‏‏‏‎ ‏‎ ‎‏‏‎</h1>
    </div>

    <hr>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
