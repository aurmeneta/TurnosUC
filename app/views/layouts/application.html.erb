<!DOCTYPE html>
<html>
  <head>
    <title>Turnos UC</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <style> body {background-image: url("<%= asset_path('fondo.png') %>");
                  background-size: cover;} 
    </style>
  </head>

  <body>
    <div class="navBar">

    <div class="bigDiv" style="background-color:#065472;text-align:center;border-radius:15px;width:260px;height:85px;float:left;box-shadow: 0px 0px;border:0px;">
       <div style="vertical-align:top;display: inline-block;">
         <%= image_tag("logo.png", size: "70x70") %>
       </div>
       <h1 style="font-family:Cambria;font-size:35px;display: inline-block;vertical-align:bottom;">Turnos UC‏‏‏‎ ‏‎ ‎‏‏‎</h1>
    </div>
 

    <% if current_usuario %>
      <br>
      <div class="button">
        <%= link_to "Cerrar Sesión", destroy_usuario_session_path, method: :delete, class: "link" %>
      </div>
      <div class="button">
        <%= link_to "Ver historial", historial_path, class: "link" %>
      </div>
      <div class="button">
        <%= link_to "Ver perfil", edit_usuario_registration_path, class: "link" %>
      </div>
      <div class="button">
        <%= link_to "Inicio", root_path, class: "link" %>
      </div>
    <% else %>
      <br>
      <div class="button">
        <%= link_to "Registrarme", new_usuario_registration_path, class: "link" %>
      </div>
      <div class="button" style="vertical-align:bottom;">
        <%= link_to "Iniciar Sesión", new_usuario_session_path, class: "link" %>
      </div>
    <% end %>

    </div>


    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>
    

  </body>
</html>
